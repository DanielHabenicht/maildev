    "version": "0.2.0",
    "configurations": [
        {
            "name": "nodemon",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/bin/maildev",
            "request": "launch",
            "restart": true,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
            "args": ["--verbose"],
            // "args": ["--verbose", "--incoming-user", "test@example.com", "--incoming-pass", "Test123!"],
            "type": "node",
            "env": {
                "MAILDEV_INCOMING_USER": "test@example.com",
                "MAILDEV_INCOMING_PASS": "Test123!"
            }
          }
    ]
}